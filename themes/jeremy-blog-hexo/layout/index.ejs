<div class='row text-center'>
    <h1>Blog</h1>
        <!-- <h1><%= config.author %></h1>
        <p><%= config.subtitle %></p> -->
   </div>
   <div class='row'>
    <ul class="home-posts">
    <% page.posts.each(function(post){ %>
        <li class="post">
            <div class="post-header-wrapper">
                <h3><a href="<%- url_for(post.path) %>"><%= post.title %></a></h3>
                <p class="date mbom"><%= date(post.date, config.date_format) %> </p>
            </div>
            <p class="grey">Time to read: <%- symbolsTime(post.content) %></p>
            <% if(post.excerpt) { %>
                <p>
                    <%- post.excerpt %>
                </p>
            <% } %>
            <% if (post.tags && post.tags.length){ %>
                <%- list_tags(post.tags, {
                    show_count: false,
                    class: 'tag'
                }) %>
            <% } %>
        </li>
        <div class="button-container">
            <a href="<%- url_for(post.path) %>"><div class="button">Read More...</div></a>
            <a href='<%- "https://www.facebook.com/sharer.php?u=" + post.permalink %>'  target="_blank"><div class="button right fb"><i class="fab fa-facebook-f" aria-hidden="true"></i></div></a>
            <a href='<%- "https://twitter.com/intent/tweet?url=" + post.permalink %>' target="_blank"><div class="button right tw"><i class="fab fa-twitter" aria-hidden="true"></i></div></a>        
        </div>
      <% }) %>
    </ul>
   </div>

   <div class="button-container">
        <% if(page.prev_link != '') { %>
            <a href="<%- config.url + page.prev_link %>"><div class="button">Previous Page</div></a>
        <% } %>
        <% if(page.next_link != '') { %>
            <a href="<%- config.url + page.next_link %>"><div class="button">Next Page</div></a>
        <% } %>
   </div>