<div class='row text-center'>
    <h2>Blog</h2>
        <!-- <h1><%= config.author %></h1>
        <p><%= config.subtitle %></p> -->
   </div>
   <div class='row'>
    <ul>
    <% page.posts.each(function(post){ %>
        <li class="post">
            <h3><a href="<%- url_for(post.path) %>"><%= post.title %></a></h3>
               <p class="date">
                   <%= date(post.date, config.date_format) %> 
               </p>
               
               <% if(post.excerpt) { %>
                   <p>
                       <%- post.excerpt %>
                   </p>
                   <a href="<%- url_for(post.path) %>"><div class="button">Read More...</div></a>
               <% } %>
               <% if (post.tags && post.tags.length){ %>
                <%- list_tags(post.tags, {
                  show_count: false,
                  class: 'tag'
                }) %>
              <% } %>
        </li>
      <% }) %>
    </ul>
   </div>